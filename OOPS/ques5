    class square{
        int a;
        int area;
        int per;
        public void area(){
            area=a*a;
            System.out.println(area);
        }
        public void perimeter(){
            per=4*a;
            System.out.println(per);
        }
    }
    
    public class Main
    {
	public static void main(String[] args) {
	square sq = new square();
	sq.a = 4;
	sq.area();
	sq.perimeter();
		
	}
}
